    "@typescript-eslint/parser": "^2.31.0",
    "eslint": "^6.8.0",
    "jest": "^26.0.1",
    "supertest": "^4.0.2",
    "ts-jest": "^25.5.1",
    "ts-node-dev": "^1.0.0-pre.44"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "ts-jest.tsConfig": "tsconfig.json"
      }
